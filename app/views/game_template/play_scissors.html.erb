

  <h2>
  We played scissors!
  </h2>
  
  <h2>
  They played <%= @comp_move %>!
  </h2>
  
  <% if @outcome == "win" %>
    <h2 style="color: green">
      We <%= @outcome %>!
    </h2>
  <% elsif @outcome == "lost" %>  
    <h2 style="color: red">
      We <%= @outcome %>!
    </h2>
  <% else @outcome %>
    <h2 style="color: orange">
      We <%= @outcome %>!
    </h2>
<% end %>
